@using Admin.Shared;

@page "/users/add"



<div class="container">

    <h1>Add new user </h1>
    <div class="row">
        <RadzenTemplateForm TItem="User" Data=@newUser Submit=@OnSubmit InvalidSubmit=@OnInvalidSubmit>
            <div class="col-lg-6">
                <RadzenFieldset Text="Personal information">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <RadzenLabel Text="First Name" Component="FirstName" />
                        </div>
                        <div class="col">
                            <RadzenTextBox style="display: block" Name="FirstName" @bind-Value=@newUser.FirstName class="w-100" />
                            <RadzenRequiredValidator Component="FirstName" Text="First name is required" Style="position: absolute" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <RadzenLabel Text="Last Name" Component="LastName" />
                        </div>
                        <div class="col">
                            <RadzenTextBox style="display: block" Name="LastName" @bind-Value=@newUser.LastName class="w-100" />
                            <RadzenRequiredValidator Component="LastName" Text="Last name is required" Style="position: absolute" />
                        </div>
                    </div>
                    <RadzenButton ButtonType="ButtonType.Submit" Text="Submit"></RadzenButton>
                </RadzenFieldset>
            </div>
            <div class="col-lg-6">
                <RadzenFieldset Text="extra information">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <RadzenLabel Text="First Name" Component="FirstName" />
                        </div>
                        <div class="col">
                            <RadzenTextBox style="display: block" Name="FirstName" @bind-Value=@newUser.FirstName class="w-100" />
                            <RadzenRequiredValidator Component="FirstName" Text="First name is required" Style="position: absolute" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <RadzenLabel Text="Last Name" Component="LastName" />
                        </div>
                        <div class="col">
                            <RadzenTextBox style="display: block" Name="LastName" @bind-Value=@newUser.LastName class="w-100" />
                            <RadzenRequiredValidator Component="LastName" Text="Last name is required" Style="position: absolute" />
                        </div>
                    </div>
                    <RadzenButton ButtonType="ButtonType.Submit" Text="Submit"></RadzenButton>
                </RadzenFieldset>
            </div>
        </RadzenTemplateForm>
    </div>
</div>


@code {
    User newUser = new User();

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

    private void OnSubmit(User model)
    {
    }

    private void OnInvalidSubmit(FormInvalidSubmitEventArgs args)
    {
    }
}
