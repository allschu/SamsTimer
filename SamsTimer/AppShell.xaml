<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SamsTimer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SamsTimer"
    xmlns:views="clr-namespace:SamsTimer.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="Black"
    Shell.TabBarUnselectedColor="White"
    Shell.TabBarBackgroundColor="Black">
    <TabBar>
        <ShellContent
        Title="Stopwatch"
        Icon="stopwatchicon.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
        Title="Timer"
        Icon="timeicon.png"
        ContentTemplate="{DataTemplate local:TimerPage}"
        Route="Timer" />
        <ShellContent
        Title="Register"
        Icon="timeicon.png"
        ContentTemplate="{DataTemplate views:SignUpPage}"
        Route="register" />
    </TabBar>
</Shell>