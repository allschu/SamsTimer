<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SamsTimer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SamsTimer"
    xmlns:views="clr-namespace:SamsTimer.Views"
    BackgroundColor="Black"
    Shell.TabBarUnselectedColor="White"
    Shell.TabBarBackgroundColor="Black">
    <FlyoutItem Icon="dumbbell.svg" Route="MainPage" Title="Training">
        <ShellContent Title="Stopwatch" Icon="stopwatchicon.png" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent Title="Timer"  Icon="timeicon.png" ContentTemplate="{DataTemplate local:TimerPage}" Route="Timer" />
    </FlyoutItem>
    <FlyoutItem Icon="user.svg" Title="Account">
        <ShellContent  Title="Inloggen"  Icon="user.svg"  ContentTemplate="{DataTemplate views:SignInPage}"  Route="signIn" />
    </FlyoutItem>
    <FlyoutItem Icon="support.svg" Title="Support">
        <ShellContent  Title="Support"  Icon="support.svg"  ContentTemplate="{DataTemplate views:SupportPage}"  Route="support" />
    </FlyoutItem>
    <TabBar>
        <ShellContent Title="Registreren" Icon="timeicon.png" ContentTemplate="{DataTemplate views:SignUpPage}" Route="register" />
    </TabBar>
</Shell>